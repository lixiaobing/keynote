/**index.wxss**/

@import "../common/index.wxss";


.btn-areas{
  margin-top: 0rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx;
}
 


.search-bar-box{
  width:100%;
  height:68rpx;
  background-color: #EFEFF4;
}
.search-bar {
  position: relative;
  padding: 8rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  flex-direction:row;
 
}


.search-bar-input{
  width:100%;
  height:68rpx;
  background-color: #FFFFFF;
  padding: 2rpx;
}


.icon_search{
  margin-left: 2rpx;
  width:60rpx;
  height:60rpx;
}
